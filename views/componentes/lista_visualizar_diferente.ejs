<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Banco de dados local versão 2</title>
</head>

<body>



    <div class="container" style="margin-top: 80px;">

        <%- include('./componentes/navbar') %>

    </div>

    <div class="container" style="margin-top: 80px;">

        <%- include('./componentes/lista_visualizar_deletar') %>
    </div>

    <div class="container">
        <div class="row">
            <% listas.forEach(function(aula) { %>
                <div class="col-3">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div>
                                <p>ALUNO: <%= aula.aluno %>
                                </p>
                                <p>PROFESSOR: <%= aula.professor %>
                                </p>
                                <p>DISCIPLINA: <%= aula.disciplina %>
                                </p>
                                <p>DATA: <%= aula.data %>
                                        <%= aula.inicio %>
                                            <%= aula.fim %>
                                </p>
                                <% console.log(aula) %>

                                <input id="paragrafId" type="text"  value= "<%= aula.id  %>" >      
                               

                            </div>
                            <div style="text-align: right;">

                                <button id="deletar_aula_btn" type="submit"
                                    onclick="confirmarExclusao(id)" class="btn btn-danger">
                                    DELETAR AULA
                                </button>

                                <script>  async function confirmarExclusao(aula_id) {
                                    let id = document.getElementById('paragrafId').value


                                        if (confirm('Deseja realmente DELETAR a aula?')) {



                                            try {

                                                const response = await fetch(`/deletar/aula/${id}`, {
                                                    method: 'DELETE',


                                                });
                                                if (response.ok) {

                                                    alert('Aula exluída com sucesso!');

                                                    window.location.reload()

                                                }
                                            }
                                            catch (err) {
                                                console.error('Erro ao excluir', err)
                                            };
                                        }
                                    } </script>



                            </div>
                        </li>
                    </ul>
                </div>
                <% }); %>
        </div>
    </div>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>